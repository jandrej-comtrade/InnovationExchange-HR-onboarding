APP_SECRET_TOKEN=your_strong_secret_here

# vTiger CRM
VTIGER_API_URL=https://yourcompany.vtiger.com/restapi/v1
VTIGER_ACCESS_KEY=your_vtiger_access_key
VTIGER_USERNAME=your_vtiger_username
